.content{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-repeat: repeat;
 padding: 40rpx;
 background-color: gainsboro;
 padding-bottom: 4pc;
}
.small{
  font-size: smaller;
  margin-left: 5px;
  margin-right: 3pc;
}
#swCall120{
  position: absolute;
  left: 80%;
  top:5%;
}
#swmessage{
  position: absolute;
  left: 80%;
  top:18%;
}
.choice{
  height: 150rpx;
  margin-bottom: 10rpx;
  width: 95%;
  border-bottom-style: solid;
  border-bottom-color: white;
  border-width: 2rpx;
}
.auto{
  width: 95%;
}
textarea{
  border-style: solid;
  border-color: gray;
  border-width: 2rpx;
  border-radius: 2px;
  height: 200rpx;
  width: 16pc;
}
button{
  box-shadow: 2rpx,2rpx,2rpx,2rpx;
  color: red;
  font-size: small;
}
.edit{
  margin-top: 50rpx;
}