<!--page/one/index.wxml-->
<view class="page">
  <view class="page-bottom">
    <view class='personInfo'>
      <image src='../images/log2.png' class='perImg'></image>
      <view>
        <text class='personName'>{{username}}</text>
        <text class='personNumber'>{{number}}</text>
      </view>
    </view>
    <view class="page-content">
      <view class="wc" bindtap='setting'>
      <image src='../images/setting.png' class='logs'></image>
        <text>偏好设置</text>
        
      </view>
      <view class="wc" bindtap='showHelp'>
      <image src='../images/showhelp.png' class='logs'></image>
        <text>帮助说明</text>
        
      </view>
      <view class="wc" bindtap='giveAdvice'>
      <image src='../images/showhelp.png' class='logs'></image>
        <text>意见反馈</text>
      </view>
      <view class="wc" bindtap='logoff'>
       <image src='../images/exit.png' class='logs'></image>
        <text>退出登录</text>
      </view>
    </view>
  </view>
  <view class="page-top {{open ? 'c-state1' : ''}}">
    <view class='content' bindtap='tap_close'>
      <image src='../images/syncope.png' bindtap='syncope' class='getHelp'></image>
      <image src='../images/getHurt.png' class='getHelp'></image>
    </view>
    <view>
      <image bindtap="tap_open" src="../images/category4.png" class="mark"></image>
    </view>
  </view>
</view>