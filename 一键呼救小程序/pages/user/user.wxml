<!--page/one/index.wxml-->
<view class="page">
    <view class="page-bottom">
        <view class='personInfo'>
          <image src='../images/account2.png' class='perImg'></image>
          <view>
           <text class='personName'>{{username}}</text>
           <text class='personNumber'>{{number}}</text>
          </view>
        </view>
        <view class="page-content">
            <view  class="wc" bindtap='setting'>
                <text >偏好设置</text><image src='../images/more.png' class='more'></image>
            </view>
            <view  class="wc"  bindtap='showHelp'>
                <text>帮助说明</text><image src='../images/more.png' class='more'></image>
                </view>
                <view  class="wc"  bindtap='giveAdvice'>
                <text>意见反馈</text><image src='../images/more.png' class='more'></image>
            </view>
            <view  class="wc"  bindtap='logoff'>
                <text>退出登录</text><image src='../images/more.png' class='more'></image>
            </view>
        </view>
    </view>
    <view class="page-top {{open ? 'c-state1' : ''}}">
        <view class='content' bindtap='tap_close'>
         <image src='../images/syncope.png' bindtap='syncope' class='getHelp' ></image>
         <image src='../images/getHurt.png' bindtap='seriousInjury' class='getHelp'></image>
        </view>
          <view>
         <image bindtap="tap_open" src="../images/Category.png" class="mark"></image>        </view>
    </view>
</view>

