<!--page/one/index.wxml-->
<view class="page">
    <view class="page-bottom">
        <view>
          <image src='../images/personal-center.png' class='perImg'></image>
          <view>
           <text class='personName'>{{username}}</text>
           <text class='personNumber'>{{number}}</text>
          </view>
        </view>
        <view class="page-content">
            <view  class="wc">
                <text bindtap='setting'>偏好设置</text>
            </view>
            <view  class="wc">
                <text bindtap='showHelp'>帮助说明</text>
            </view>
            <view  class="wc">
                <text>我的手环</text>
            </view>
            <view  class="wc">
                <text bindtap='logoff'>退出登录</text>
            </view>
        </view>
    </view>
    <view class="page-top {{open ? 'c-state1' : ''}}">
        <view>
         <image bindtap="tap_open" src="../images/btn.png" class="mark"></image>
        </view>
        <view class='content' bindtap='tap_close'>
         <image src='../images/syncope.png' bindtap='syncope' class='getHelp'></image>
         <image src='../images/getHurt.png' bindtap='getHurt' class='getHelp'></image>
        </view>
    </view>
    
   
</view>

