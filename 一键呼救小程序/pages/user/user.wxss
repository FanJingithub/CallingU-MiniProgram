/* pages/user/user.wxss */

.page {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-repeat: repeat;
  background: rgb(240, 240, 240);
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
}

/*侧边栏*/

.page-bottom {
  height: 100%;
  width: 750rpx;
  position: fixed;
  background-color: black;
  z-index: 0;
}

.logs {
  width: 50rpx;
  height: 50rpx;
  margin-right: 100rpx;
  shape-image-threshold: 5rpx;
  display: inline-block;
}
.wc {
  color: black;
  padding: 30rpx 0rpx 30rpx 0rpx;
   margin-left: 50rpx;
  margin-top: 0rpx;
  display: flex;
}
.page-content {
  background: white;
  padding-bottom: 500rpx;
}

.page-top {
  height: 100%;
  position: fixed;
  width: 750rpx;
  background-color: white;
  z-index: 0;
  transition: All 0.1s ease;
  -webkit-transition: All 0.1s ease;
}
.getHelp {
  background-repeat: round;
  width: 640rpx;
  height: 500rpx;
  margin-top: 60rpx;
  margin-left: 55rpx;
  shape-image-threshold: 5rpx;
}

.mark {
  position: absolute;
  width: 75rpx;
  height: 75rpx;
  top: 0ch;
  left: 0;
}

.c-state1 {
  transform: rotate(0deg) scale(1) translate(75%, 0%);
  -webkit-transform: rotate(0deg) scale(1) translate(75%, 0%);
}

.personName {
  position: absolute;
  left: 200rpx;
  top: 160rpx;
}

.personNumber {
  position: absolute;
  left: 200rpx;
  top: 110rpx;
}

.personInfo {
  height: 350rpx;
  width: 750rpx;
   color: white;
   background: black;
}

.perImg {
  width: 120rpx;
  height: 120rpx;
  position: fixed;
  left: 40rpx;
  top: 80rpx;
  border-radius: 60rpx;
}
